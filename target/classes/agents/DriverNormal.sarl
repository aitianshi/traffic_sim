package agents

/** 
 * 
 */

import events.Influence
import events.Perception
import io.sarl.core.DefaultContextInteractions
import io.sarl.core.Destroy
import io.sarl.core.Initialize
import io.sarl.core.Logging
import capacities.Drive
import org.arakhne.afc.math.geometry.d2.d.Point2d
import road_elements.Road
import road_elements.Car
import events.EndOfRoad
import capacities.DrivingNormal

/** 
 * @author robin
 * 
 */
agent DriverNormal extends Driver {
	uses Logging
	uses DefaultContextInteractions
	uses Drive
	
	on Initialize {
		setSkill(new DrivingNormal)
		super.initProperties(0,null, new Point2d(0, 0), new Point2d(100, 100),null)
		
	}
	
	

	on Destroy {
		info("The agent was stopped.")
	}

	on Perception {
		info("perception")
		emit(new Influence)
		
	}
	
}

